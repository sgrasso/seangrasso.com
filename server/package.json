{
  "name": "seangrasso.com",
  "version": "1.0.0",
  "description": "Personal Site",
  "main": "index.js",
  "scripts": {
    "start": "node .",
    "dev": "run-p watch-css watch-js watch-server",
    "build": "run-p build-js build-css",
    "build-js": "uglifyjs public/js/lib/*.js views/**/client.js -v -o public/js/main.min.js",
    "build-css": "cat public/css/font-awesome/css/font-awesome.css public/css/fontello/css/fontello.css public/css/lib/*.css public/css/styles.css | cleancss -o public/css/styles.min.css",
    "watch-server": "nodemon --ignore public/ --ignore 'views/**/client.js' -x npm start",
    "watch-js": "nodemon -e js,pug -w public/js/lib -w 'views/**/client.js' -x 'npm run build-js'",
    "watch-css": "nodemon -e css -w public/css/styles.css -x 'npm run build-css'"
  },
  "author": "Sean Grasso",
  "license": "MIT",
  "engines": {
    "node": ">=4.0"
  },
  "dependencies": {
    "glue": "3.x.x",
    "good": "7.x.x",
    "good-console": "6.x.x",
    "good-squeeze": "3.x.x",
    "hapi": "13.5.3",
    "inert": "3.x.x",
    "pug": "2.0.0-beta6",
    "rotating-file-stream": "1.x.x",
    "tweet-to-html": "1.0.2",
    "twitter": "1.4.0",
    "vision": "4.1.0"
  },
  "devDependencies": {
    "clean-css": "^3.4.12",
    "npm-run-all": "^2.1.1",
    "uglify-js": "^2.6.2"
  }
}
